{
    "root": true,
    "rules": {
        "indent": ["error", 4],
        "key-spacing": "error",
        "quotes": ["error", "single", {
            "avoidEscape": true,
        }],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
        }],
    },
}
